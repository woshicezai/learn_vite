{
    "compilerOptions": {
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      },
      "target": "es2020",
      "module": "esnext",
      "moduleResolution": "node",
      "jsx": "preserve",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "strict": false,
      "skipLibCheck": true
    },
    "include": [
      "src/**/*.js",
      "src/**/*.jsx",
      "src/**/*.vue",
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }